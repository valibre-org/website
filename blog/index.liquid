---
layout: blog.liquid
data:
  route: blog
---

<h1>{% include "blog.svg" %}</h1>

<ul id="posts">
{% for post in collections.posts.pages %}{% if post.slug != "index" %}
	<li>
		<div class="card">
			<time datetime="{{ post.published_date }}">{{ post.published_date | date: "%d %b" }}</time>
			<a href="/{{ post.permalink }}"><h2>{{ post.title }}</h2></a>
			<img src="/img/blog/{{ post.slug }}_s.jpg" alt="Cover image">
			<p>{{ post.description }}</p>
		</div>
	</li>
{% endif %}{% endfor %}
</ul>

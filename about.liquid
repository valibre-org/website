---
permalink: /sobre-nosotros/
title: Sobre Nosotros
layout: index.liquid
data:
  route: sobre-nosotros
---
<style>
	/*Dark Nav*/
	#nav { background-color: var(--clr-blue-light); }
	#nav a:not(#about-link) { color: var(--clr-olive-darker); }
	#menu-icon svg line { stroke: var(--clr-olive-darker); }
	#virto-logo svg path { fill: var(--clr-olive-darker); }

	section { padding: 2em;}
#hero {
	background-image: url('/img/about_bg.svg');
	background-position: center center;
  	background-repeat: no-repeat;
  	background-attachment: fixed;
  	background-size: cover;
	background-color: var(--clr-blue-light);
}

section >  article {
	flex-direction: column
}

.timeline-section {
  position: relative;
  flex-grow: 1;
}

.timeline-container {
	content: '';
	position: absolute;
	background: var(--clr-green-darker);
	width: 10px;
	left: 10%;
	height: 100dvh;
}

.timeline-item {
	position: relative;
	float: left;
	padding: 2em;
	width: 95vw;
}

.timeline-item h2, .timeline-item h3 { 
	margin: 28px;
 }

.timeline-item h3 {
	line-height: 1.6;
}

.timeline-content {
	flex-wrap: wrap;
	max-width: 900px;
	padding: 20px;
}

.animated-timeline {
  opacity: 0;
  transform: translateY(100px);
  transition: opacity 1.5s ease, transform 0.5s ease;
}

.animated-timeline.animate {
  opacity: 1;
  transform: translateY(0);
}

.timeline-content h2 {
  animation-delay: 0.2s;
}

.timeline-content h3:nth-child(1) {
  animation-delay: 0.4s;
}

.timeline-content h3:nth-child(2) {
  animation-delay: 0.6s;
}

#action-plan ul.step-list {
    display: flex;
    flex-wrap: wrap;
    gap: 2em;
    justify-content: center;
    padding: 0;
}

#action-plan ul.step-list li.step-card {
    list-style: none;
    border-radius: 15px;
    padding: 2em;
    flex: 1 1 300px;
    min-height: 200px;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
}

.step-icon {
    margin-bottom: 1em;
}

#team-list {
	list-style: none;
	display: grid;
	grid-template-columns: repeat(3, 1fr);
	grid-gap: 10px;
}

#team-list span { color: var(--clr-green-darker); }
#team-list li:not(.space) {
	padding: 10px;
	display: flex;
	align-items: center;
}

#team-list div { border-left: 3px solid var(--clr-green-darker); padding-left: 10px; }
#team-list img {
	width: 70px;
	height: 70px;
	border-radius: 50%;
	margin-right: 10px;
	background-color: #ccc;
}

@media (max-width: 1279px) {
	#hero {
		background-image: url('/img/about_bg_sm.svg');
	}
	#team-list { display: flex; flex-direction: column; }
	#team-list li { margin-top: 10px; }
	.space { display: none; }
}

@media (min-width: 1600px) {
		#team-list { grid-template-columns: repeat(5, 1fr); }
	}

</style>
<body>
{% for about in site.data.index.about_us %} 

	<section {% if about.id == "hero" %} id="hero" class="left dark-olive-text">
		<article class="animated">
			<h1>{{ about.title }}</h1>
		</article>
	</section>
{% endif %}

<section {% if about.id == "issue" %} id="issue" class="timeline-section white-text">
	<div class="timeline-container">
	  <div class="timeline-item">
		<div class="timeline-content">
		  <h2 class="animated-timeline dark-green-text">{{ about.title }}</h2>
		  <h3 class="animated-timeline">{{ about.paragraph_one }}</h3>
		  <h3 class="animated-timeline">{{ about.paragraph_two }}</h3>
		</div>
	  </div>
	</div>
  </section>
  {% endif %}
  
  <section {% if about.id == "virto" %} id="virto" class="timeline-section white-text">
	<div class="timeline-container">
	  <div class="timeline-item">
		<div class="timeline-content">
		  <h2 class="animated-timeline dark-green-text">{{ about.title }}</h2>
		  <h3 class="animated-timeline">{{ about.paragraph_one }}</h3>
		  <h3 class="animated-timeline">{{ about.paragraph_two }}</h3>
		  <h3 class="animated-timeline">{{ about.paragraph_three }}</h3>
		  <h3 class="animated-timeline">{{ about.paragraph_four }}</h3>
		</div>
	  </div>
	</div>
  </section>
  {% endif %}  
	
<section {% if about.id == "action-plan" %} id="action-plan" class="light-green-bg">
    <article class="animated center">
        <h2>{{ about.title }}</h2>
        <h3>{{ about.subtitle }}</h3>
        <ul class="step-list">
            {% for step in about.step_list %}
                <li class="step-card white-bg">
                    <div class="step-icon">
                        {% include step.icon %}  
                    </div>
                    <h3>{{ step.content }}</h3>
                </li>
            {% endfor %}
        </ul>
    </article>
</section>
{% endif %}

<section {% if about.id == "team" %} id="team" class="whitest-bg dark-olive-text">
	<article class="animated">
		<h2>{{ about.title  }}</h2>
		<h3>{{ about.subtitle  }}</h3>
			<ul id="team-list">
				{% for team_member in about.team_members %}
					<li>
						<img src="{{ team_member.avatar }}" alt="{{ team_member.name }}" height="38">
						<div>
							<a href={{ team_member.link }} class="dark-olive-text">
								<h4>{{ team_member.name }}</h4>
								<h5 class="thin">{{ team_member.role }}</h5>
							</a>
						</div>
					</li>
					<li class="space"></li>
				{% endfor %}
			</ul>
	</article>
</section>
{% endif %}

<section {% if about.id == "cta_about" %} id="cta_about" class="cta dark-green-text">
	<article class="animated center">
		<h3 class="regular">{{ about.subtitle }}</h3>
		<h2>{{ about.title }}</h2>
		<h3 class="bold white-text">{{ about.paragraph }}</h3>
		<button>{{ about.call_to_action }}</button>
	</article>
</section>
{% endif %}

{% endfor %}

<script>

const observerTimeline = new IntersectionObserver(entries => {
  		entries.forEach(entry => {
			if (entry.intersectionRatio > 0) {
				entry.target.classList.add('animate');
				observer.unobserve(entry.target);
			}
  		});
	}, { threshold: 0.3 }); 

	const animatedTimelineElements = document.querySelectorAll('.animated-timeline');

	animatedTimelineElements.forEach(element => {
		observerTimeline.observe(element);
	});


</script>
</body>